{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "ESNext"],
		"allowJs": true,
		"noEmit": true,
		"module": "ES2020",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true,
		"jsx": "react-jsx",
		"baseUrl": "./",
		"paths": {
			"@theme": ["./theme"],
			"@hooks/*": ["./hooks/*"],
			"@components/*": ["theme/components/*"],
			"@builtIns": ["theme/components/builtIns"],
			"@builtIns/*": ["theme/components/builtIns/*"]
		}
	},
	"mdx": {
		"checkMdx": true
	},
	"include": ["src", "docs", "theme", "theme/components", "./rspress.config.ts"]
}
